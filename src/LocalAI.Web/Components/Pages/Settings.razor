@page "/settings"
@using Microsoft.JSInterop
@using LocalAI.Web.Services
@inject IApiService ApiService
@inject IConfiguration Configuration
@inject IJSRuntime JSRuntime

<PageTitle>Settings</PageTitle>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="text-center mb-4">
                <h1 class="display-5 fw-bold text-primary">Settings</h1>
                <p class="lead text-muted">Configure your Local AI Knowledge Assistant</p>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">System Configuration</h5>
                </div>
                <div class="card-body">
                    <form @onsubmit:preventDefault="true" @onsubmit="@(async e => { await SaveSettings(); })">
                        <div class="mb-3">
                            <label for="apiUrl" class="form-label">API Base URL</label>
                            <input type="text" class="form-control" id="apiUrl" value="http://localhost:5000" disabled>
                            <div class="form-text">The base URL for the LocalAI API service</div>
                        </div>

                        <div class="mb-3">
                            <label for="embeddingModel" class="form-label">Embedding Model</label>
                            <input type="text" class="form-control" id="embeddingModel" @bind="embeddingModel">
                        </div>

                        <div class="mb-3">
                            <label for="chatModel" class="form-label">Chat Model</label>
                            <input type="text" class="form-control" id="chatModel" @bind="chatModel">
                        </div>

                        <div class="mb-3">
                            <label for="vectorDb" class="form-label">Vector Database</label>
                            <input type="text" class="form-control" id="vectorDb" value="Qdrant (localhost:6333)"
                                disabled>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">Save Settings</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Document Paths</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="transcriptsPath" class="form-label">Transcripts Directory</label>
                        <input type="text" class="form-control" id="transcriptsPath" value="data/transcripts/" disabled>
                    </div>

                    <div class="mb-3">
                        <label for="pdfsPath" class="form-label">PDFs Directory</label>
                        <input type="text" class="form-control" id="pdfsPath" value="data/pdfs/" disabled>
                        <div class="form-text">Subdirectories will be processed recursively</div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">System Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Hardware:</strong> RTX 5070 Ti System</p>
                            <p><strong>Framework:</strong> .NET 9.0</p>
                            <p><strong>Architecture:</strong> Clean Architecture</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Search Performance:</strong> ~2 seconds (system limitation)</p>
                            <p><strong>LLM Response:</strong> ~3-4 seconds (optimized)</p>
                            <p><strong>Total Query Time:</strong> ~5-6 seconds</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@code {
    private string embeddingModel = string.Empty;
    private string chatModel = string.Empty;

    protected override void OnInitialized()
    {
        embeddingModel = Configuration["EmbeddingService:Model"] ?? string.Empty;
        chatModel = Configuration["RAGService:Model"] ?? string.Empty;
    }

    private async Task SaveSettings()
    {
        // In a real implementation, you would send the settings to the API
        // For now, we'll just show a success message
        await JSRuntime.InvokeVoidAsync("alert", $"Settings saved successfully! Chat Model: {chatModel}, Embedding Model: {embeddingModel}");
    }
}
